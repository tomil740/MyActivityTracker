<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/notification_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:backgroundTint="#F0F4F8">

    <!-- TITLE (Main header) -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🏋️ Weekly Workout Summary"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="4dp" />

    <!-- SUBTITLE (Short Motivation) -->
    <TextView
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You're making great progress – keep it going!"
        android:textSize="15sp"
        android:textColor="#37474F"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="12dp" />

    <!-- BUTTON ROW -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:weightSum="2">

        <Button
            android:id="@+id/setGoalsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Workout"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/remindLaterButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remind Me"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800"/>
    </LinearLayout>
</LinearLayout>
